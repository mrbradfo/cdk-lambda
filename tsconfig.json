{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "ts-out/",
  },
  "include": [
    "bin",
    "iac",
    "src/**/*",
    "declarations",
  ],
  "exclude": [
    "cdk.out",
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "ts-out/"
  ]
}